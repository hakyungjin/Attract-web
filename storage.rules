rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{allPaths=**} {
      allow read: if true;
      allow write: if true; // 테스트를 위해 일시적으로 허용 (운영 시 request.auth != null 로 변경 권장)
    }
    match /posts/{allPaths=**} {
      allow read: if true;
      allow write: if true; // 테스트를 위해 일시적으로 허용
    }
    match /community/{allPaths=**} {
      allow read: if true;
      allow write: if true; // 테스트를 위해 일시적으로 허용
    }
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
